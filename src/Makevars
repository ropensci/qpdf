#all: clean
all: $(SHLIB) cleanup

$(SHLIB): $(STATLIB)

$(STATLIB): $(LIBQPDF)

cleanup: $(SHLIB)
	@rm -f $(LIBQPDF) $(STATLIB)

# On Windows this rule is masked by Makeconf in base R
%.a:
	@$(AR) crs $@ $^ && $(STRIP_STATIC_LIB) $@ || true
